<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Module Management</title>
    <link rel="stylesheet" href="/assets/design.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
</head>

<body>
    <!-- Header -->
    <header class="header">
        <div class="container">
            <h1 class="title is-3 has-text-weight-bold">GradeWiz</h1>
        </div>

        <div class="home-icon">
            <a href="/views/admindash.html" class="button is-white">
                <span class="material-icons">home</span>
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <div class="columns is-gapless">
        <!-- Sidebar (Left) -->
        <aside class="column is-one-quarter-tablet sidebar">
            <div class="box sidebar-content">
                <h3 class="title is-4">Admin Info</h3>
                <p><strong>Name:</strong> Admin User</p>
                <p><strong>Role:</strong> Administrator</p>
                <p><strong>Email:</strong> admin@gradewiz.com</p>
                <button class="button is-primary is-fullwidth mt-3">Logout</button>
            </div>
        </aside>

        <!-- Main Content Area -->
        <div class="column">
            <div class="section">
                <h2 class="title is-4">Module Management</h2>

                <!-- Add Module Button -->
                <div class="field">
                    <div class="control">
                        <button class="button is-primary is-fullwidth" id="addStudentBtn">
                            <span class="icon">
                                <i class="material-icons">add</i>
                            </span>
                            <span>Add Module</span>
                        </button>
                    </div>
                </div>

                <!-- Student Records Table -->
                <div class="box">
                    <h3 class="title is-5">Module Information</h3>
                    <table class="table is-fullwidth is-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Code</th>
                                <th>CAT</th>
                                <th>Pathway Code</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Web Development</td>
                                <td>WD7062</td>
                                <td>20</td>
                                <td>SDWB2</td>
                                <td>
                                    <button class="button is-small is-info">
                                        <span class="icon">
                                            <i class="material-icons">edit</i>
                                        </span>
                                    </button>
                                    <button class="button is-small is-danger">
                                        <span class="icon">
                                            <i class="material-icons">delete</i>
                                        </span>
                                    </button>
                                </td>
                            </tr>
                            <tr>
                                <td>Programming</td>
                                <td>PR7061</td>
                                <td>40</td>
                                <td>SDPR1</td>
                                <td>
                                    <button class="button is-small is-info">
                                        <span class="icon">
                                            <i class="material-icons">edit</i>
                                        </span>
                                    </button>
                                    <button class="button is-small is-danger">
                                        <span class="icon">
                                            <i class="material-icons">delete</i>
                                        </span>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="content has-text-centered">
            <p>&copy; 2023 Quinn. All rights reserved.</p>
        </div>
    </footer>

    <!-- Add Student Modal -->
    <div class="modal" id="addStudentModal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Add Module</p>
                <button class="delete" aria-label="close" id="closeModalBtn"></button>
            </header>
            <section class="modal-card-body">
                <!-- Add Student Form -->
                <form id="addStudentForm">
                    <div class="field">
                        <label class="label">Name</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Enter module name" required>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Code</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Enter module code" required>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">CAT</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Enter CAT value" required>
                        </div>
                    </div>

                    <div class="field">
                        <label class="label">Pathway Code</label>
                        <div class="control">
                            <input class="input" type="text" placeholder="Enter pathway code" required>
                        </div>
                    </div>
                </form>
            </section>
            <footer class="modal-card-foot">
                <button class="button is-primary" id="saveStudentBtn">Save</button>
                <button class="button" id="cancelStudentBtn">Cancel</button>
            </footer>
        </div>
    </div>

    <!-- JavaScript for Modal Functionality -->
    <script>
        // Open Modal
        document.getElementById('addStudentBtn').addEventListener('click', () => {
            document.getElementById('addStudentModal').classList.add('is-active');
        });

        // Close Modal
        document.getElementById('closeModalBtn').addEventListener('click', () => {
            document.getElementById('addStudentModal').classList.remove('is-active');
        });

        document.getElementById('cancelStudentBtn').addEventListener('click', () => {
            document.getElementById('addStudentModal').classList.remove('is-active');
        });

        // Save Student (Example Functionality)
        document.getElementById('saveStudentBtn').addEventListener('click', () => {
            alert('Student added successfully!');
            document.getElementById('addStudentModal').classList.remove('is-active');
        });
    </script>
</body>

</html>